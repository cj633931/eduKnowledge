@model eduKnowledge.Models.TagViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h3>Let's change something...</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p><input type="submit" value="Save" class="btn btn-success btn-block" /></p>
                <p><a asp-action="Index" class="btn btn-dark btn-block">Back to Tags</a></p>
            </div>
        </form>
    </div>
</div>

