@model eduKnowledge.Models.TagViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Tag: "@Html.DisplayFor(model => model.Name)"?</h1>

<h3>It'll be gone forever (a very long time)!</h3>
<hr />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <p><input type="submit" value="Delete!" class="btn btn-danger btn-block" /></p>
        <p><a asp-action="Index" class="btn btn-dark btn-block">Nevermind!</a></p>
    </form>
</div>
